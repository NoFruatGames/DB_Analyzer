<Window x:Class="DB_Analyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DB_Analyzer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="input provider" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="107" FontWeight="Bold" FontSize="14"/>
        <ComboBox x:Name="InputProvidersComboBox" HorizontalAlignment="Left" Margin="122,13,0,0" VerticalAlignment="Top" Width="120" FontWeight="Bold" FontSize="14" SelectionChanged="InputProvidersComboBox_SelectionChanged" >
        </ComboBox>
        <Label Content="database" HorizontalAlignment="Left" Margin="254,11,0,0" VerticalAlignment="Top" Width="77" FontWeight="Bold" FontSize="14"/>
        <ComboBox x:Name="DatabasesComboBox" HorizontalAlignment="Center" Margin="0,14,0,0" VerticalAlignment="Top" Width="141" FontWeight="Bold" FontSize="14" SelectionChanged="DatabasesComboBox_SelectionChanged" >
        </ComboBox>

    </Grid>
</Window>
